<p id="notice"><%= notice %></p>

<h4>ユーザー一覧</h4>

<table>
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user do %><%= image_tag user.image_url, size: '50x50' %><%= user.name %><% end %></td>
        <% if user.id == current_user.id %>
          <td><%= link_to 'ユーザー情報の修正', edit_user_path(user) %></td>
          <td><%#= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

