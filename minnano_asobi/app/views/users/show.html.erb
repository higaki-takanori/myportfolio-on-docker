<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <% if current_user == @user %>
  <strong>Email:</strong>
    <%= @user.email %>
  <% end %>
</p>

<p>
  <strong>アイコン:</strong>
  <%= image_tag @user.image_url, size: '50x50' %>
</p>

<p>
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <a class="list-group-item list-group-item-action active" data-toggle="list" href="#plays" role="tab">投稿</a>
    </li>
    <li class="nav-item">
      <a class="list-group-item list-group-item-action" data-toggle="list" href="#likes" role="tab">お気に入り</a>
    </li>
  </ul>

  <div class="tab-content">
    <div class="tab-pane active" id="plays" role="tabpanel">
      <%= render 'posted', user: @user %>
    </div>
    <div class="tab-pane" id="likes" role="tabpanel">
      <%= render 'likes', user: @user %>
    </div>
  </div>


</p>

<% if current_user == @user %>
  <%= link_to 'ユーザー情報の修正', edit_user_path(@user), class: "btn btn-secondary" %>  
<% end %>
